/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 
.blog-view {
  background-color: #fff;
}
a {
  color: #378CC2;
}

button.red-btn {
  background-color: #378CC2;
  color: #fff;
}

button.red-btn:active,
button.red-btn.button-hover {
  background-color: #137dc0;
  color: #fff;
}

button[disabled].red-btn,
button[disabled].red-btn:active {
  background-color: #eee;
  color: #aaa;
}
/*列表*/
.zh-list {
  border-top: 1px solid #f3f3f3;
}
.zh-list-item {
  height: 24px;
  line-height: 24px;
  font-size: 14px;
  padding: 10px;
  border-bottom: 1rpx solid #f3f3f3;
}
.zh-list-item .icon {
  height: 16px;
  width: 16px;
  margin-right: 10px;
  float: left;
  margin-top: 3px;
}
.zh-list-item .icon-right {
  float: right;
  margin-top: 6px;
}

.zh-list-item.list-item-link:active {
  background-color: #f3f3f3;
}

/*icon*/
.icon-right {
  width: 12px;
  height: 12px;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  transform: rotate(45deg);
}

.page-title {
  padding: 20rpx 30rpx;
  font-size: 16px;
  line-height: 1.5;
  border-bottom: 1rpx solid #fafafa;
}

.article-item {
  padding: 30rpx 0rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #d3d3d3;
}
.article-item .info {
  overflow: hidden;
}
.article-item .username,
.article-item .sort,
.article-item .view,
.article-item .time {
  font-size: 12px;
  line-height: 20px;
  margin-top:  5px;
  display: block;
  color: #aaa;
}
.article-item .view,
.article-item .username,
.article-item .sort {
  float: left;
  margin-right: 10px;
}
.article-item .time {
  float: right;
}
.article-item.with-pic {
  padding-right: 200rpx;
  position: relative;
  padding-bottom: 1.5em;
  min-height: 150rpx;
}
.article-item.with-pic .title {
  min-height: 3.5em;
}
.article-item.with-pic .info {
  position:absolute;
  width:100%;
  box-sizing:border-box;
  bottom:20rpx;
}
.article-item.with-pic .desc-img {
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 180rpx;
  height: 145rpx;
  overflow: hidden;
}
.article-item .desc,
.article-item .desc-with-pics {
  font-size: 14px;
  line-height: 1.5;
  color: #787878;
}
.article-item .desc-with-pics .desc-pics {
  display: flex;
}
.article-item .desc-with-pics .desc-img {
  flex: 1;
  padding: 20rpx 10rpx;
  height: 200rpx;
}

.article-item .title {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10px;
  color:#202020;
  line-height: 1.5;
}
.article-item.article-info {
  background-color: transparent;
}
.article-item .article-item {
  border-left: 1px solid #666;
  background-color: #eee;
  margin: 10px 0;
}
.read-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 14px;
  color: #aaa;
}
.error {
  background-color:#ff0;
  text-align:center;
  padding:10px 0;
  color:#a00;
  font-size:14px;
}

.article-comment-item {
  border-bottom-color: #eee;
}

.article-comment-item .desc {
  color: #2b2b2b;
}

.article-comment-children {
  padding-left:  30rpx;
}
.article-comment-children .desc {
  margin: 0;
  font-size: 24rpx;
}
.add-comment {
  position: fixed;
  bottom: 15px;
  right: 15px;
  width: 110rpx;
  height: 110rpx;
  z-index: 999;
}
.add-comment:active {
  opacity: 0.8;
}

.banner {
  width: 100%;
  height: 260rpx;
}