<!-- 普通列表 -->
<template name="normalAritcle">
  <view class="article-item" data-gid="{{ ID }}" bindtap="showblogInfo">
    <text class="title">{{ Title }}</text>
    <view class="info">
      <text class="sort">评论: ({{ CommNums }})</text>
      <text class="sort">阅读: ({{ ViewNums }})</text>
      <text class="time">{{ PostTime }}</text>
    </view>
  </view>
</template>